    local profilePhoto = Instance.new("ImageLabel")
    profilePhoto.Size = getSize(
        UDim2.new(0, 50, 0, 50),
        UDim2.new(0, 60, 0, 60),
        UDim2.new(0, 70, 0, 70)
    )
    profilePhoto.Position = UDim2.new(0.5, 0, 0, 10)
